<window
    id="win1"
    width="900"
    height="900"
    title="GTK controle"
    icon_name="folder"
    icon_path="assets\images\paint.png"
    has_header="true"
    
>

    <box
        id="box1"
    >
        <menu_bar id="menu_bar1">

            <menu_item
                id="file_menu_item"
                label="_File"
            >
                <menu id="menu1">
                    <menu_item
                        id="new_menu_item"
                        label="_New"
                    />
                    <menu_item
                        id="open_menu_item"
                        label="_Save"
                    />

                    <menu_item
                        id="save_menu_item"
                        label=" _Exit"
                    />
                </menu>

            </menu_item>

            <menu_item
                id="about_menu_item"
                label="_About"
            />


        </menu_bar>

        <scrolled_window
            on_key_press="sig_key_press"
            id="scw1"
            box_expand="true"
            box_fill="true"
        >


            <box
                id="conent_box"
                margin_top="40"
                margin_left="20"
                    valign="start"
                    halign="start"
                    width="500"
                    spacing="20"
            >
                <box
                    id="content_box"
                    paned_order="1"
                >
                    <label id="label1"
                        label_text="Widgets"
                        xalign="0.5"
                        yalign="0.5"
                        valign="center"
                        box_expand="true"
                        box_fill="true"
                    />
                    <frame 
                        width="50" >
                        <box
                            id="box2"
                            orientation="horizontal"
                        >   

                            <radio_button
                                id="rbtn1"
                                label="Faible"
                            />

                            <radio_button
                                id="rbtn2"
                                label="Moyen"
                            />

                            <radio_button
                                id="rbtn3"
                                label="Bien"
                            />

                            <radio_button
                                id="rbtn4"
                                label="Tres bien"
                            />

                        </box>
                    </frame>
                
                </box>
                </paned>

                <box
                    width="50"
                    margin_buttom="10"
                >
                        <label 
                            label_text=" Vos connaissances de GTK+"
                        />
                        <frame 
                            width="50" >
                            <box
                                id="box2"
                                orientation="horizontal"
                            >   

                                <check_button
                                    id="rbtn1"
                                    label="Faible"
                                />

                                <check_button
                                    id="rbtn2"
                                    label="Moyen"
                                />

                                <check_button
                                    id="rbtn3"
                                    label="Bien"
                                />

                                <check_button
                                    id="rbtn4"
                                    label="Tres bien"
                                />
                        </box>
                    </frame>
                
                </box>


                
                <box 
                    halign="50"
                    valign="50"
                    width="500"
                    height="200"
                    margin_buttom="10"
                >
                    <label 
                        label_text="Choix un date"
                    />
                    <frame 
                        width="50"
                    >
                        <box
                            id="box2"
                            orientation="horizontal"
                        >   
                            <label 
                                label_text="Jour"
                            />
                            <combo_text_box
                                type="day"
                                has_entry="true"
                                is_editable="false"
                                default_value="1"
                            />
                            <label 
                                label_text="Moi"
                                margin_start="20"
                            />

                            <combo_text_box
                                type="month"
                                has_entry="true"
                                is_editable="false"
                                default_value="0"
                            />

                            <label 
                                label_text="Annee"
                                margin_start="20"
                            />

                            <combo_text_box
                                type="year"
                                has_entry="true"
                                is_editable="false"
                                default_value="0"
                            />
                        </box>
                    </frame>

                    <fixed 
                            halign="30"
                            valign="30"
                            width="20"
                            height="20"
                            margin_top="5"
                    
                    >
                        <combo_text_box 
                            has_entry="true"
                            is_editable="false"
                            default_value="Fair un choix"
                            default_index="0"

                            option1="option1"
                            option2="option2"
                            option3="option3"

                            position_x="0"
                            position_y="0"
                        />

                    </fixed>

                </box>


                <fixed 
                id="id"
                >

                    <box 
                        halign="start"
                        valign="start"
                        width="400"
                        position_x="350"
                        position_y="250"
                    >
                        <label 
                            label_text=" Vos connaissances de GTK+"
                        />
                        <frame 
                            width="50" >
                            <box
                                id="box2"
                                orientation="horizontal"
                            >   

                                <radio_button
                                    id="rbtn1"
                                    label="Faible"
                                />

                                <radio_button
                                    id="rbtn2"
                                    label="Moyen"
                                />

                                <radio_button
                                    id="rbtn3"
                                    label="Bien"
                                />

                                <radio_button
                                    id="rbtn4"
                                    label="Tres bien"
                                />

                            </box>
                        </frame>
                    
                    </box>


                    <box
                        id="box2"
                        paned_order="2"
                        spacing="10"
                        orientation="horizontal"
                        valign="start"
                        halign="start"
                         position_x="350"
                        position_y="350"
                    >
                        <frame
                            id="frame1"
                            label="Containers"
                            margin_top="5"
                            margin_bottom="5"
                            margin_left="5"
                            margin_right="5"
                            vexpand="true"
                            hexpand="true"
                        >
                            <grid
                                id="grid1"
                                vexpand="true"
                                hexpand="true"
                                row_spacing="10"
                                column_spacing="10"
                                margin_top="5"
                                margin_bottom="5"
                                margin_left="5"
                                margin_right="5"
                            >

                                <button
                                    id="btn0"
                                    label="Box"
                                    hexpand="true"
                                    row="0"
                                    column="0"
                                    icon_path="./assets/images/icons/container_bw.png"
                                    on_click="sig_properties_dialog"
                                    param_1="box"
                                />

                                <button
                                    id="btn2"
                                    label="Fixed"
                                    hexpand="true"
                                    row="0"
                                    column="1"
                                    icon_path="./assets/images/icons/container_bw.png"
                                    on_click="sig_hello"
                                    param_1="fixed"
                                />

                                <button
                                    id="btn3"
                                    label="Grid"
                                    hexpand="true"
                                    row="1"
                                    column="0"
                                    icon_path="./assets/images/icons/container_bw.png"
                                    on_click="sig_properties_dialog"
                                    param_1="grid"
                                />

                                <button
                                    id="btn1"
                                    label="Paned"
                                    hexpand="true"
                                    row="1"
                                    column="1"
                                    icon_path="./assets/images/icons/container_bw.png"
                                    on_click="sig_properties_dialog"
                                    param_1="paned"
                                />

                                <button
                                    id="btn4"
                                    label="FlowBox"
                                    hexpand="true"
                                    row="2"
                                    column="0"
                                    icon_path="./assets/images/icons/container_bw.png"
                                    on_click="sig_properties_dialog"
                                    param_1="flowbox"
                                />

                                <button
                                    id="btn5"
                                    label="Notebook"
                                    hexpand="true"
                                    row="2"
                                    column="1"
                                    icon_path="./assets/images/icons/container_bw.png"
                                    on_click="sig_properties_dialog"
                                    param_1="notebook"
                                />

                                <button
                                    id="btn6"
                                    label="Overlay"
                                    hexpand="true"
                                    row="3"
                                    column="0"
                                    icon_path="./assets/images/icons/container_bw.png"
                                    on_click="sig_properties_dialog"
                                    param_1="overlay"
                                />

                                <button
                                    id="btn7"
                                    label="Frame"
                                    hexpand="true"
                                    row="3"
                                    column="1"
                                    icon_path="./assets/images/icons/container_bw.png"
                                    on_click="sig_properties_dialog"
                                    param_1="frame"
                                />

                            </grid>
                        </frame>

                        <frame
                            id="frame2"
                            label="Menus"
                            margin_top="5"
                            margin_bottom="5"
                            margin_left="5"
                            margin_right="5"
                            vexpand="true"
                            hexpand="true"
                        >
                            <grid
                                id="grid2"
                                vexpand="true"
                                hexpand="true"
                                row_spacing="10"
                                column_spacing="10"
                                margin_top="5"
                                margin_bottom="5"
                                margin_left="5"
                                margin_right="5"
                            >

                                <button
                                    id="btn8"
                                    label="MenuBar"
                                    hexpand="true"
                                    row="0"
                                    column="0"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn9"
                                    label="Menu"
                                    hexpand="true"
                                    row="0"
                                    column="1"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn10"
                                    label="MenuItem"
                                    hexpand="true"
                                    row="1"
                                    column="0"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                            </grid>
                        </frame>

                        <frame
                            id="frame3"
                            label="Widgets"
                            margin_top="5"
                            margin_bottom="5"
                            margin_left="5"
                            margin_right="5"
                            vexpand="true"
                            hexpand="true"
                        >
                            <grid
                                id="grid3"
                                vexpand="true"
                                hexpand="true"
                                row_spacing="10"
                                column_spacing="10"
                                margin_top="5"
                                margin_bottom="5"
                                margin_left="5"
                                margin_right="5"
                            >

                                <button
                                    id="btn11"
                                    label="Label"
                                    hexpand="true"
                                    row="0"
                                    column="0"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn12"
                                    label="LinkButton"
                                    hexpand="true"
                                    row="0"
                                    column="1"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn13"
                                    label="Button"
                                    hexpand="true"
                                    row="1"
                                    column="0"
                                    icon_path="./assets/images/icons/open-menu.png"
                                    on_click="sig_properties_dialog"
                                    param_1="button"
                                />

                                <button
                                    id="btn14"
                                    label="Entry"
                                    hexpand="true"
                                    row="1"
                                    column="1"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn15"
                                    label="SwitchButton"
                                    hexpand="true"
                                    row="2"
                                    column="0"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn16"
                                    label="ToggleButton"
                                    hexpand="true"
                                    row="2"
                                    column="1"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn17"
                                    label="RadioButton"
                                    hexpand="true"
                                    row="3"
                                    column="0"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn18"
                                    label="Checkbox"
                                    hexpand="true"
                                    row="3"
                                    column="1"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn19"
                                    label="TextArea"
                                    hexpand="true"
                                    row="4"
                                    column="0"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn20"
                                    label="SpinButton"
                                    hexpand="true"
                                    row="4"
                                    column="1"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn21"
                                    label="ProgressBar"
                                    hexpand="true"
                                    row="5"
                                    column="0"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn22"
                                    label="Separator"
                                    hexpand="true"
                                    row="5"
                                    column="1"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn23"
                                    label="Image"
                                    hexpand="true"
                                    row="6"
                                    column="0"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                            </grid>
                        </frame>
                    </box>

                </fixed>

            </box>

        
        </box>
    </scrolled_window>
</window>