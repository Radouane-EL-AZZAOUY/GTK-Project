<window
    id="win1"
    width="1500"
    height="900"
    title="GTK IDE"
    icon_name="folder"
    icon_path="assets\images\programer.jpg"
    has_header="false"
    is_maximized="false"
>


    <box
        id="box1"
    >
        <menu_bar id="jkf">

            <menu_item
                label="_File"
            >
                <menu id="menu1">
                    <menu_item
                        label="_New"
                    />
                    <menu_item
                        label="_Save"
                    />

                    <menu_item
                        label=" _Exit"
                    />
                </menu>

            </menu_item>

            <menu_item
                id="about_menu_item"
                label="_About"
            />


        </menu_bar>

        <scrolled_window
            on_key_press="sig_key_press"
            id="sw1"
            box_expand="true"
            box_fill="true"
        >
            <paned
                id="paned1"
                orientation="horizontal"
                position="200"
                is_wide="true"
            >
                <box
                    id="conent_box"
                    paned_order="1"
                >
                    <label id="id"
                        label_text="Widgets"
                        xalign="0.5"
                        yalign="0.5"
                        valign="center"
                        box_expand="true"
                        box_fill="true"
                    />

                </box>

                <paned
                    id="paned2"
                    orientation="horizontal"
                    paned_order="2"
                    position="1000"
                >

                    <scrolled_window
                        id="scw2"
                        paned_order="1"
                    >

                        <frame
                            id="viewer"
                            label="Viewer"
                            margin_top="5"
                            margin_bottom="5"
                            margin_left="5"
                            margin_right="5"
                            vexpand="true"
                            hexpand="true"
                        />
                    </scrolled_window>

                    <box
                        id="box"
                        paned_order="2"
                        spacing="10"
                    >
                        <frame
                            id="btn1"
                            label="Containers"
                            margin_top="5"
                            margin_bottom="5"
                            margin_left="5"
                            margin_right="5"
                            vexpand="true"
                            hexpand="true"
                        >
                            <grid
                                id="grd1"
                                vexpand="true"
                                hexpand="true"
                                row_spacing="10"
                                column_spacing="10"
                                margin_top="5"
                                margin_bottom="5"
                                margin_left="5"
                                margin_right="5"
                            >

                                <button
                                    id="btn1"
                                    label="Box"
                                    hexpand="true"
                                    row="0"
                                    column="0"
                                    icon_path="./assets/images/icons/container_bw.png"
                                    on_click="sig_properties_dialog"
                                    param_1="box"
                                />

                                <button
                                    id="btn1"
                                    label="Fixed"
                                    hexpand="true"
                                    row="0"
                                    column="1"
                                    icon_path="./assets/images/icons/container_bw.png"
                                    on_click="sig_properties_dialog"
                                    param_1="fixed"
                                />

                                <button
                                    id="btn1"
                                    label="Grid"
                                    hexpand="true"
                                    row="1"
                                    column="0"
                                    icon_path="./assets/images/icons/container_bw.png"
                                    on_click="sig_properties_dialog"
                                    param_1="grid"
                                />

                                <button
                                    id="btn1"
                                    label="Paned"
                                    hexpand="true"
                                    row="1"
                                    column="1"
                                    icon_path="./assets/images/icons/container_bw.png"
                                    on_click="sig_properties_dialog"
                                    param_1="paned"
                                />

                                <button
                                    id="btn1"
                                    label="FlowBox"
                                    hexpand="true"
                                    row="2"
                                    column="0"
                                    icon_path="./assets/images/icons/container_bw.png"
                                    on_click="sig_properties_dialog"
                                    param_1="flowbox"
                                />

                                <button
                                    id="btn1"
                                    label="Notebook"
                                    hexpand="true"
                                    row="2"
                                    column="1"
                                    icon_path="./assets/images/icons/container_bw.png"
                                    on_click="sig_properties_dialog"
                                    param_1="notebook"
                                />

                                <button
                                    id="btn1"
                                    label="Overlay"
                                    hexpand="true"
                                    row="3"
                                    column="0"
                                    icon_path="./assets/images/icons/container_bw.png"
                                    on_click="sig_properties_dialog"
                                    param_1="overlay"
                                />

                                <button
                                    id="btn1"
                                    label="Frame"
                                    hexpand="true"
                                    row="3"
                                    column="1"
                                    icon_path="./assets/images/icons/container_bw.png"
                                    on_click="sig_properties_dialog"
                                    param_1="frame"
                                />

                            </grid>
                        </frame>

                        <frame
                            id="btn1"
                            label="Menus"
                            margin_top="5"
                            margin_bottom="5"
                            margin_left="5"
                            margin_right="5"
                            vexpand="true"
                            hexpand="true"
                        >
                            <grid
                                id="grd1"
                                vexpand="true"
                                hexpand="true"
                                row_spacing="10"
                                column_spacing="10"
                                margin_top="5"
                                margin_bottom="5"
                                margin_left="5"
                                margin_right="5"
                            >

                                <button
                                    id="btn1"
                                    label="MenuBar"
                                    hexpand="true"
                                    row="0"
                                    column="0"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn1"
                                    label="Menu"
                                    hexpand="true"
                                    row="0"
                                    column="1"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn1"
                                    label="MenuItem"
                                    hexpand="true"
                                    row="1"
                                    column="0"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                            </grid>
                        </frame>

                        <frame
                            id="btn1"
                            label="Widgets"
                            margin_top="5"
                            margin_bottom="5"
                            margin_left="5"
                            margin_right="5"
                            vexpand="true"
                            hexpand="true"
                        >
                            <grid
                                id="grd1"
                                vexpand="true"
                                hexpand="true"
                                row_spacing="10"
                                column_spacing="10"
                                margin_top="5"
                                margin_bottom="5"
                                margin_left="5"
                                margin_right="5"
                            >

                                <button
                                    id="btn1"
                                    label="Label"
                                    hexpand="true"
                                    row="0"
                                    column="0"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn1"
                                    label="LinkButton"
                                    hexpand="true"
                                    row="0"
                                    column="1"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn1"
                                    label="Button"
                                    hexpand="true"
                                    row="1"
                                    column="0"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn1"
                                    label="Entry"
                                    hexpand="true"
                                    row="1"
                                    column="1"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn1"
                                    label="SwitchButton"
                                    hexpand="true"
                                    row="2"
                                    column="0"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn1"
                                    label="ToggleButton"
                                    hexpand="true"
                                    row="2"
                                    column="1"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn1"
                                    label="RadioButton"
                                    hexpand="true"
                                    row="3"
                                    column="0"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn1"
                                    label="Checkbox"
                                    hexpand="true"
                                    row="3"
                                    column="1"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn1"
                                    label="TextArea"
                                    hexpand="true"
                                    row="4"
                                    column="0"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn1"
                                    label="SpinButton"
                                    hexpand="true"
                                    row="4"
                                    column="1"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn1"
                                    label="ProgressBar"
                                    hexpand="true"
                                    row="5"
                                    column="0"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn1"
                                    label="Separator"
                                    hexpand="true"
                                    row="5"
                                    column="1"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                                <button
                                    id="btn1"
                                    label="Image"
                                    hexpand="true"
                                    row="6"
                                    column="0"
                                    icon_path="./assets/images/icons/open-menu.png"
                                />

                            </grid>
                        </frame>
                    </box>
                </paned>
            </paned>
        </scrolled_window>
    </box>
</window>