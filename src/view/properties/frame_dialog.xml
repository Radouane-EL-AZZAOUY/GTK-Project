<dialog
    id="dialog"
    title="Properties"
    width="500"
    height="600"
    hint_type="dialog"
    is_modal="true"
    on_response="sig_dialog_response"
>

    <box
        id="box1"
        spacing="10"
    >

        <label
            id="title_label"
            label_text="Frame properties"
            yalign="0.5"
            font_size="18"
            box_expand="true"
            box_fill="true"
            halign="center"
            margin_top="10"
            margin_bottom="10"
        />

        <scrolled_window
            id="sw1"
            box_expand="true"
            box_fill="true"
            height="500"
        >
            <box
                id="bx"
                spacing="10"
            >

                <frame
                    id="btn1"
                    label="Core"
                    margin_left="10"
                    margin_right="10"
                    box_expand="true"
                    box_fill="true"
                >
                    <box
                        id="bx"
                        spacing="10"
                    >
                        <box
                            orientation="horizontal"
                            spacing="10"
                            box_expand="true"
                            box_fill="true"
                            margin_left="10"
                            margin_right="10"
                            homogeneous="true"
                        >
                            <label
                                id="showdo_type_label"
                                label_text="Shadow type"
                                yalign="0.5"
                                box_expand="true"
                                box_fill="true"
                            />
                            <combo_text_box
                                id="combo1"
                                default_index="0"
                                option1="IN (default)"
                                option2="OUT"
                                option3="ETCHED_IN"
                                option4="ETCHED_OUT"
                                box_expand="true"
                                box_fill="true"
                            />

                        </box>

                        <box
                            orientation="horizontal"
                            spacing="10"
                            box_expand="true"
                            box_fill="true"
                            margin_left="10"
                            margin_right="10"
                            margin_bottom="10"
                            homogeneous="true"
                        >
                            <label
                                id="label_label"
                                label_text="Label"
                                yalign="0.5"
                                box_expand="true"
                                box_fill="true"
                            />

                            <entry
                                id="label_entry"
                                placeholder_text="Enter the label"
                                box_expand="true"
                                box_fill="true"
                            />
                        </box>

                    </box>

                </frame>

                <frame
                    id="btn1"
                    label="Label alignment"
                    margin_left="10"
                    margin_right="10"
                    box_expand="true"
                    box_fill="true"
                >
                    <box
                        id="bx"
                        spacing="10"
                    >
                        <box
                            orientation="horizontal"
                            spacing="10"
                            margin_left="10"
                            margin_right="10"
                            box_expand="true"
                            box_fill="true"
                            homogeneous="true"
                        >
                            <label
                                id="label_xalign_label"
                                label_text="Horizontal"
                                yalign="0.5"
                                box_expand="true"
                                box_fill="true"
                            />

                            <spin_button
                                id="label_xalgin_spin"
                                initial_value="0"
                                min="0"
                                max="1"
                                is_digits="true"
                                box_expand="true"
                                box_fill="true"
                            />

                        </box>
                        <box
                            orientation="horizontal"
                            spacing="10"
                            box_expand="true"
                            box_fill="true"
                            margin_left="10"
                            margin_right="10"
                            margin_bottom="10"
                            homogeneous="true"
                        >
                            <label
                                id="label_yalign_label"
                                label_text="Vertical"
                                yalign="0.5"
                                box_expand="true"
                                box_fill="true"
                            />

                            <spin_button
                                id="label_yalgin_spin"
                                initial_value="0"
                                min="0"
                                max="1"
                                is_digits="true"
                                box_expand="true"
                                box_fill="true"
                            />

                        </box>
                    </box>

                </frame>

                <frame
                    id="btn1"
                    label="Dimensions"
                    margin_left="10"
                    margin_right="10"
                    box_expand="true"
                    box_fill="true"
                >
                    <box
                        id="bx"
                        spacing="10"
                    >
                        <box
                            orientation="horizontal"
                            spacing="10"
                            margin_left="10"
                            margin_right="10"
                            box_expand="true"
                            box_fill="true"
                            homogeneous="true"
                        >
                            <label
                                id="width_label"
                                label_text="Width"
                                yalign="0.5"
                                box_expand="true"
                                box_fill="true"
                            />
                            <spin_button
                                id="width_spin"
                                initial_value="0"
                                min="0"
                                max="10000"
                                box_expand="true"
                                box_fill="true"
                            />
                        </box>
                        <box
                            orientation="horizontal"
                            spacing="10"
                            box_expand="true"
                            box_fill="true"
                            margin_left="10"
                            margin_right="10"
                            margin_bottom="10"
                            homogeneous="true"
                        >
                            <label
                                id="height_label"
                                label_text="Height"
                                yalign="0.5"
                                box_expand="true"
                                box_fill="true"
                            />
                            <spin_button
                                id="height_spin"
                                initial_value="0"
                                min="0"
                                max="10000"
                                box_expand="true"
                                box_fill="true"
                            />

                        </box>
                    </box>

                </frame>

                <frame
                    id="btn1"
                    label="Margins"
                    margin_left="10"
                    margin_right="10"
                    box_expand="true"
                    box_fill="true"
                >
                    <box
                        id="bx"
                        spacing="10"
                    >
                        <box
                            orientation="horizontal"
                            spacing="10"
                            margin_left="10"
                            margin_right="10"
                            box_expand="true"
                            box_fill="true"
                            homogeneous="true"
                        >
                            <label
                                id="margin_top_label"
                                label_text="Top"
                                yalign="0.5"
                                box_expand="true"
                                box_fill="true"
                            />
                            <spin_button
                                id="margin_top_spin"
                                initial_value="0"
                                min="0"
                                max="10000"
                                box_expand="true"
                                box_fill="true"
                            />
                        </box>
                        <box
                            orientation="horizontal"
                            spacing="10"
                            margin_left="10"
                            margin_right="10"
                            box_expand="true"
                            box_fill="true"
                            homogeneous="true"
                        >
                            <label
                                id="margin_bottom_label"
                                label_text="Bottom"
                                yalign="0.5"
                                box_expand="true"
                                box_fill="true"
                            />
                            <spin_button
                                id="margin_bottom_spin"
                                initial_value="0"
                                min="0"
                                max="10000"
                                box_expand="true"
                                box_fill="true"
                            />
                        </box>
                        <box
                            orientation="horizontal"
                            spacing="10"
                            margin_left="10"
                            margin_right="10"
                            box_expand="true"
                            box_fill="true"
                            homogeneous="true"
                        >
                            <label
                                id="margin_right_label"
                                label_text="Right"
                                yalign="0.5"
                                box_expand="true"
                                box_fill="true"
                            />
                            <spin_button
                                id="margin_right_spin"
                                initial_value="0"
                                min="0"
                                max="10000"
                                box_expand="true"
                                box_fill="true"
                            />
                        </box>
                        <box
                            orientation="horizontal"
                            spacing="10"
                            box_expand="true"
                            box_fill="true"
                            margin_left="10"
                            margin_right="10"
                            margin_bottom="10"
                            homogeneous="true"
                        >
                            <label
                                id="margin_left_label"
                                label_text="Left"
                                yalign="0.5"
                                box_expand="true"
                                box_fill="true"
                            />
                            <spin_button
                                id="margin_left_spin"
                                initial_value="0"
                                min="0"
                                max="10000"
                                box_expand="true"
                                box_fill="true"
                            />

                        </box>
                    </box>

                </frame>

                <frame
                    id="btn1"
                    label="Alignment"
                    margin_left="10"
                    margin_right="10"
                    box_expand="true"
                    box_fill="true"
                >
                    <box
                        id="bx"
                        spacing="10"
                    >
                        <box
                            orientation="horizontal"
                            spacing="10"
                            margin_left="10"
                            margin_right="10"
                            box_expand="true"
                            box_fill="true"
                            homogeneous="true"
                        >
                            <label
                                id="halign_label"
                                label_text="Horizontal"
                                yalign="0.5"
                                box_expand="true"
                                box_fill="true"
                            />

                            <combo_text_box
                                id="halign_combo"
                                default_index="0"
                                option1="Fill (default)"
                                option2="center"
                                option3="start"
                                option4="end"
                                option5="baseline"
                                box_expand="true"
                                box_fill="true"
                            />

                        </box>
                        <box
                            orientation="horizontal"
                            spacing="10"
                            box_expand="true"
                            box_fill="true"
                            margin_left="10"
                            margin_right="10"
                            margin_bottom="10"
                            homogeneous="true"
                        >
                            <label
                                id="valign_label"
                                label_text="Vertical"
                                yalign="0.5"
                                box_expand="true"
                                box_fill="true"
                            />

                            <combo_text_box
                                id="valign_combo"
                                default_index="0"
                                option1="Fill (default)"
                                option2="center"
                                option3="start"
                                option4="end"
                                option5="baseline"
                                box_expand="true"
                                box_fill="true"
                            />

                        </box>
                    </box>

                </frame>

                <frame
                    id="btn1"
                    label="Expand"
                    margin_left="10"
                    margin_right="10"
                    box_expand="true"
                    box_fill="true"
                >
                    <box
                        id="bx"
                        spacing="10"
                    >
                        <box
                            orientation="horizontal"
                            spacing="10"
                            margin_left="10"
                            margin_right="10"
                            box_expand="true"
                            box_fill="true"
                            homogeneous="true"
                        >
                            <label
                                id="hexpand_label"
                                label_text="Horizontal"
                                yalign="0.5"
                                box_expand="true"
                                box_fill="true"
                            />

                            <switch_button
                                id="hexpand_switch"
                                box_expand="true"
                                box_fill="true"
                                margin_right="20"
                                halign="end"
                            />

                        </box>
                        <box
                            orientation="horizontal"
                            spacing="10"
                            box_expand="true"
                            box_fill="true"
                            margin_left="10"
                            margin_right="10"
                            margin_bottom="10"
                            homogeneous="true"
                        >
                            <label
                                id="vexpand_label"
                                label_text="Vertical"
                                yalign="0.5"
                                box_expand="true"
                                box_fill="true"
                            />

                            <switch_button
                                id="hexpand_switch"
                                box_expand="true"
                                box_fill="true"
                                margin_right="20"
                                halign="end"
                            />

                        </box>
                    </box>

                </frame>

                <frame
                    id="btn1"
                    label="Colors"
                    margin_left="10"
                    margin_right="10"
                    box_expand="true"
                    box_fill="true"
                >
                    <box
                        id="bx"
                        spacing="10"
                    >
                        <box
                            orientation="horizontal"
                            spacing="10"
                            margin_left="10"
                            margin_right="10"
                            box_expand="true"
                            box_fill="true"
                            homogeneous="true"
                        >
                            <label
                                id="bg_color_label"
                                label_text="Backgroud color"
                                yalign="0.5"
                                box_expand="true"
                                box_fill="true"
                            />
                            <entry
                                id="bg_color_entry"
                                placeholder_text="eg: #FFFFFF"
                                box_expand="true"
                                box_fill="true"
                            />
                        </box>
                        <box
                            orientation="horizontal"
                            spacing="10"
                            box_expand="true"
                            box_fill="true"
                            margin_left="10"
                            margin_right="10"
                            margin_bottom="10"
                            homogeneous="true"
                        >
                            <label
                                id="color_label"
                                label_text="Text color"
                                yalign="0.5"
                                box_expand="true"
                                box_fill="true"
                            />
                            <entry
                                id="color_entry"
                                placeholder_text="eg: #FFFFFF"
                                box_expand="true"
                                box_fill="true"
                            />

                        </box>
                    </box>

                </frame>

            </box>
        </scrolled_window>

        <box
            orientation="horizontal"
            spacing="10"
            box_expand="true"
            box_fill="true"
            margin_left="10"
            margin_right="10"
            homogeneous="true"
            margin_bottom="10"
        >

            <button
                id="btn1"
                label="Apply"
                box_expand="true"
                box_fill="true"
                icon_path="./assets/images/icons/approve.png"
            />

            <button
                id="btn1"
                label="Cancel"
                box_expand="true"
                box_fill="true"
                icon_path="./assets/images/icons/no-entry.png"
            />


        </box>
    </box>

</dialog>